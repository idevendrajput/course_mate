<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".auth.Register">

    <View
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:background="@drawable/rounded_shape_dark"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="0.5"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-750dp"
        android:layout_marginTop="-50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:fontFamily="@font/futura_medium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/parentPhone"
            app:layout_constraintStart_toStartOf="@+id/parentPhone"
            android:text="Your Name"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/open_sans"
            android:background="?android:selectableItemBackgroundBorderless"
            android:textColor="@color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14sp"
            android:textColorHint="#EAEAEA"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="#9CC0FA"
            android:textCursorDrawable="@drawable/cursor_white"
            android:layout_marginTop="10dp"
            android:autofillHints="phone"
            android:inputType="phone"
            android:id="@+id/name"
            android:hint="Enter your name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/parentPhone"
            app:layout_constraintStart_toStartOf="@+id/parentPhone"
            android:id="@+id/countryCode"
            android:text="+91 (IN)"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans"
            android:background="?android:selectableItemBackgroundBorderless"
            android:textColor="@color/white"
            app:drawableStartCompat="@drawable/ic_round_keyboard_arrow_down_24"
            app:drawableTint="@color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14sp"
            android:textColorHint="#EAEAEA"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="#9CC0FA"
            android:textCursorDrawable="@drawable/cursor_white"
            android:layout_marginTop="10dp"
            android:autofillHints="phone"
            android:inputType="phone"
            android:id="@+id/phoneNumber"
            android:hint="Enter phone number"
            />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/main"
            android:layout_gravity="end"
            app:backgroundTint="@color/white"
            android:layout_marginTop="30sp"
            app:cornerRadius="10dp"
            app:iconSize="30sp"
            android:paddingVertical="15dp"
            app:icon="@drawable/ic_baseline_arrow_right_alt_24"
            app:iconGravity="textEnd"
            app:iconPadding="15dp"
            app:iconTint="@color/main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textColor="@color/white"
            android:fontFamily="@font/futura_medium"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"
            android:textSize="16sp"
            android:id="@+id/login"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="OR"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:alpha="0.5"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/googleg_standard_color_18"
            app:iconTint="@null"
            android:layout_marginTop="20dp"
            android:paddingVertical="12dp"
            app:cornerRadius="10dp"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            android:text="Continue with google"
            app:iconGravity="textStart"
            app:iconPadding="15dp"
            android:id="@+id/continueWithGoogle"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>