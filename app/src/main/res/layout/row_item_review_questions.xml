<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:background="@drawable/ic_outline_circle_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/questionNo"
        android:gravity="center"
        android:textSize="12sp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_check_circle_24"
        app:layout_constraintStart_toEndOf="@+id/questionNo"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/check"
        android:layout_marginStart="7dp"
        android:contentDescription="@null"
        app:tint="@color/green"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is awesome question"
        app:layout_constraintStart_toEndOf="@+id/check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/check"
        android:id="@+id/question"
        android:textSize="17sp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/futura_medium"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_keyboard_arrow_down_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/arrow"
        android:contentDescription="@null"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="#D1D1D1"
        android:padding="15dp"
        android:id="@+id/optionsContainer"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/question"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. This is optionA"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:id="@+id/optionA"
            android:textColor="@color/black"
            />

        <View
            android:layout_width="100dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="7dp"/>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. This is optionA"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="10dp"
             android:textSize="14sp"
            android:id="@+id/optionB"
            android:textColor="@color/black"
            />

        <View
            android:layout_width="100dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="7dp"/>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. This is optionA"
            android:fontFamily="@font/roboto"
             android:layout_marginTop="10dp"
             android:textSize="14sp"
            android:id="@+id/optionC"
            android:textColor="@color/black"
            />


        <View
            android:layout_width="100dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="7dp"/>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. This is optionA"
            android:fontFamily="@font/roboto"
             android:layout_marginTop="10dp"
             android:textSize="14sp"
            android:id="@+id/optionD"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explanation: This is awesome explanation by devendra sir"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:background="@drawable/rounded_bg"
            android:padding="10dp"
            android:id="@+id/explanation"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>